<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studysphere.controllers.NoteViewController" alignment="CENTER">
    <children>
        <VBox spacing="0" alignment="TOP_CENTER" styleClass="modal-dialog">
            <children>
                <HBox styleClass="modal-header" alignment="CENTER_LEFT" spacing="8">
                    <children>
                        <VBox alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="titleLabel" styleClass="modal-title" text="Note title" />
                                <!-- editable title field (hidden until edit mode) -->
                                <TextField fx:id="titleField" visible="false" styleClass="modal-input" promptText="Note title..." />
                                <Label fx:id="subtitleLabel" styleClass="modal-subtitle" text="" />
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox spacing="8">
                            <children>
                                <Button fx:id="editButton" text="Edit" onAction="#onEditToggle" styleClass="button modal-submit" />
                                <Button text="Delete" onAction="#onDelete" styleClass="button modal-cancel" />
                                <Button text="X" onAction="#onClose" styleClass="modal-close" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <VBox spacing="12" styleClass="modal-body">
                    <children>
                        <Label text="Subject" styleClass="modal-field-label" />
                        <Label fx:id="subjectLabel" />
                        <!-- editable subject field (hidden until edit mode) -->
                        <TextField fx:id="subjectField" visible="false" promptText="Subject..." styleClass="modal-input" />
                        <Label text="Tags" styleClass="modal-field-label" />
                        <Label fx:id="tagsLabel" />
                        <!-- editable tags field (hidden until edit mode) -->
                        <TextField fx:id="tagsField" visible="false" promptText="tag1, tag2" styleClass="modal-input" />
                        <Label text="Content" styleClass="modal-field-label" />
                        <TextArea fx:id="contentArea" editable="false" wrapText="true" styleClass="modal-textarea" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studysphere.controllers.NotificationsController" fx:id="notificationsRoot">
    <top>
        <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding:12 16 8 16; -fx-border-color: transparent transparent rgba(0,0,0,0.12) transparent; -fx-border-width: 0 0 2 0;">
            <children>
                <Label text="Notifications &amp; Reminders" styleClass="page-title" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color:transparent; -fx-padding: 18 12 24 12;">
            <content>
                <VBox spacing="18" maxWidth="Infinity" fillWidth="true" style="-fx-padding:18 12 36 12; -fx-alignment:TOP_LEFT;">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <children>
                                <VBox spacing="6" alignment="TOP_LEFT">
                                    <children>
                                        <Label text="Notification Center" styleClass="panel-title-small" />
                                        <Label text="Manage your reminders and notifications preference" style="-fx-text-fill: rgba(0,0,0,0.45); -fx-font-size:12px;" />
                                    </children>
                                </VBox>
                                <Region HBox.hgrow="ALWAYS" />
                                <HBox spacing="10" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button text="Settings" onAction="#onSettings" styleClass="pill-button" />
                                        <Button text="+ New Reminder" onAction="#onNewReminder" styleClass="pill-button" />
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <VBox styleClass="info-card" maxWidth="Infinity" fillWidth="true" spacing="8" style="-fx-background-color:#e9e9e9; -fx-background-radius:12px; -fx-padding:16;">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="&#x1F514; Upcoming Reminders" styleClass="panel-title" />
                                        <Region HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <Label fx:id="upcomingCountLabel" text="Your next 0 active reminders" style="-fx-text-fill: rgba(0,0,0,0.45); -fx-font-size:12px;" />
                                <ListView fx:id="upcomingList" prefHeight="120" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-control-inner-background: transparent;" />
                                <Label fx:id="upcomingMessageLabel" text="No upcoming reminders." style="-fx-text-fill: rgba(0,0,0,0.45);" />
                            </children>
                        </VBox>

                        <VBox styleClass="info-card tall" spacing="12" alignment="TOP_LEFT" style="-fx-background-color:#e9e9e9; -fx-background-radius:12px; -fx-padding:18;" maxWidth="Infinity">
                            <children>
                                <Label text="All Reminders" styleClass="panel-title" />
                                <Label text="Manage all your reminders (0 total)" style="-fx-text-fill: rgba(0,0,0,0.45); -fx-font-size:12px;" />

                                <StackPane style="-fx-padding:12 8 12 8;">
                                    <children>
                                        <ListView fx:id="reminderList" prefHeight="360" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-control-inner-background: transparent;" />
                                        <VBox fx:id="reminderEmpty" alignment="CENTER" visible="false">
                                            <children>
                                                <Label text="&#x1F514;" style="-fx-font-size:32px; -fx-text-fill:#222;" />
                                                <Label text="No reminders yet" style="-fx-font-weight:bold; -fx-font-size:15px;" />
                                                <Label text="Create your first reminder to get started!" style="-fx-text-fill: rgba(0,0,0,0.45);" />
                                            </children>
                                        </VBox>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>

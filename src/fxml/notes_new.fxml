<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="studysphere.controllers.NotesNewController" alignment="CENTER">
    <children>
        <!-- dialog root uses modal-dialog styleClass to match dashboard modal -->
        <VBox fx:id="dialogRoot" spacing="0" alignment="TOP_CENTER" styleClass="modal-dialog">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="8" styleClass="modal-header">
                    <children>
                        <VBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Create New Note" styleClass="modal-title" />
                                <Label text="Add a new note to your collection." styleClass="modal-subtitle" />
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="X" onAction="#onCancelNewNote" styleClass="modal-close" />
                    </children>
                </HBox>

                <!-- Body -->
                <VBox spacing="12" styleClass="modal-body">
                    <children>
                        <Label text="Title" styleClass="modal-field-label" />
                        <TextField fx:id="noteTitleNew" promptText="Enter note title..." styleClass="modal-input" />

                        <Label text="Subject" styleClass="modal-field-label" />
                        <TextField fx:id="noteSubjectNew" promptText="e.g. Mathematics, History, Chemistry..." styleClass="modal-input" />

                        <Label text="Tags (comma separated)" styleClass="modal-field-label" />
                        <TextField fx:id="noteTagsNew" promptText="e.g., exam, formulas, important..." styleClass="modal-input" />

                        <Label text="Content" styleClass="modal-field-label" />
                        <TextArea fx:id="noteContentNew" promptText="Write your note content here..." styleClass="modal-textarea" prefHeight="180" wrapText="true" />

                    </children>
                </VBox>

                <!-- Footer -->
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding:12 16 18 16; -fx-alignment:center-right;">
                    <children>
                        <Button text="Cancel" onAction="#onCancelNewNote" styleClass="button modal-cancel" />
                        <Button text="Submit" onAction="#onSaveNoteNew" styleClass="button modal-submit" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
